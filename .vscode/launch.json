    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver"
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/backend/manage.py",
            "python": "${workspaceFolder}/backend/venv/bin/python" // Add this line for Unix-based systems
            // "python": "${workspaceFolder}\\backend\\venv\\Scripts\\python.exe" // Use this line for Windows
        }
    ]
}